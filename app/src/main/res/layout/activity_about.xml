<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical">

    <com.zx.view.widget.HeaderView
        android:id="@+id/view_header"
        xmlns:HeaderView="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        HeaderView:title_text="@string/about_title"
        HeaderView:menu_visible="false">
    </com.zx.view.widget.HeaderView>

    <com.zx.view.widget.MessageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_text="@string/about_author"
        app:message_text="@string/about_author_name"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>

    <com.zx.view.widget.MessageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_text="@string/about_thank"
        app:message_text="@string/about_thank_name"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>

    <com.zx.view.widget.MessageView
        android:id="@+id/view_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_text="@string/about_version"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>

    <!--<TextView-->
        <!--android:id="@+id/tv_check_update"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:padding="15dp"-->
        <!--android:text="@string/about_check_for_updates"-->
        <!--android:textSize="@dimen/setting_item_size"-->
        <!--android:textColor="@color/black"/>-->


</LinearLayout>