<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/view_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/result_card_margin"
    app:cardElevation="5dp">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="80dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@+id/view_card"
            android:layout_toRightOf="@+id/view_card"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_cname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="2dp"
                android:text="@string/cname_test"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp">

                <TextView
                    android:id="@+id/tv_camp_result"
                    style="@style/layout_wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/camp_test"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_race_result"
                    style="@style/layout_wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:text="@string/race_test"
                    android:textSize="12sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp">

                <TextView
                    android:id="@+id/tv_power_result"
                    style="@style/layout_wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/power_test"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_cost_result"
                    style="@style/layout_wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:text="@string/cost_test"
                    android:textSize="12sp"/>

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/view_card"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <include layout="@layout/item_deck_editor"/>
        </FrameLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>