<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_pl"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:background="@drawable/corners_primary">
        </ImageView>

        <TextView
            android:id="@+id/tv_deck_save"
            android:layout_width="50dp"
            android:layout_height="24dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/btn_blue"
            android:gravity="center"
            android:text="@string/deck_save"
            android:textColor="@color/white"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_advanced_search"
            android:layout_width="50dp"
            android:layout_height="24dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/btn_blue"
            android:gravity="center"
            android:text="@string/advanced_search_about_title"
            android:textColor="@color/white"
            android:textSize="12sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:padding="5dp"
        android:background="@drawable/corners_primary"
        android:orientation="horizontal">

        <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="80dp"
            android:layout_height="110dp"
            android:layout_margin="4dp"
            android:layout_gravity="center_vertical"
            app:is_auto_play="false"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_cname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/tv_number"
                    android:layout_toStartOf="@+id/tv_number"
                    android:ellipsize="end"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:textSize="12sp"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_race"
                    style="@style/layout_wrap_content"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_power"
                    style="@style/layout_wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_cost"
                    style="@style/layout_wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="12sp"/>

            </LinearLayout>

            <ScrollView
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_ability"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"/>

            </ScrollView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>