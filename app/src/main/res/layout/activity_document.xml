<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zx.view.widget.AppBarView
        android:id="@+id/viewAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_text="@string/document_about_title"/>

    <com.zx.view.widget.MessageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:message_text="@string/key_search_hint"
        app:title_text="@string/key_search"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>

    <com.zx.view.widget.MessageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:message_text="@string/interval_search_hint"
        app:title_text="@string/interval_search"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>

    <com.zx.view.widget.MessageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:message_text="@string/deck_operate_hint"
        app:title_text="@string/deck_operate"/>

</LinearLayout>