<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    android:id="@+id/view_drawer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/view_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.zx.ui.main.MainActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/view_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View style="@style/layout_statusbar"/>

                <RelativeLayout style="@style/layout_header">

                    <ImageView
                        android:id="@+id/img_icon"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_alignParentBottom="true"
                        android:padding="10dp"
                        android:src="@drawable/img_icon"/>

                    <TextView
                        android:id="@+id/tv_title"
                        style="@style/view_header_title"
                        android:layout_toEndOf="@+id/img_icon"
                        android:layout_toRightOf="@+id/img_icon"
                        android:text="@string/app_name"/>

                </RelativeLayout>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/view_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_header">

                <com.youth.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:delay_time="2000"
                    app:is_auto_play="true"/>

            </FrameLayout>

            <EditText
                android:id="@+id/txt_search"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/view_banner"
                android:layout_centerInParent="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/txt_primary"
                android:gravity="center"
                android:hint="@string/search_hint"
                android:maxLines="1"
                android:textSize="18sp"/>

        </RelativeLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="15dp"
            android:src="@android:drawable/ic_menu_search"/>

    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:insetForeground="#00000000"
        app:menu="@menu/item_nav"/>

</android.support.v4.widget.DrawerLayout>