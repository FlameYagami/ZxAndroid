<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/view_content"
    style="@style/layout_match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.zx.view.widget.HeaderView
        android:id="@+id/view_header"
        xmlns:HeaderView="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        HeaderView:title_text="@string/advanced_search_about_title">
    </com.zx.view.widget.HeaderView>

    <LinearLayout
        android:id="@+id/linearLayout"
        style="@style/layout_match_parent"
        android:layout_below="@+id/view_header"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/txt_key"
                style="@style/StyleEditText"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:hint="@string/search_hint"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">

            <TextView
                style="@style/layout_wrap_content"
                android:text="@string/cost"/>

            <EditText
                android:id="@+id/txt_cost"
                style="@style/StyleEditText"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"/>

            <TextView
                style="@style/layout_wrap_content"
                android:text="@string/power"/>

            <EditText
                android:id="@+id/txt_power"
                style="@style/StyleEditText"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">

            <TextView
                style="@style/layout_wrap_content"
                android:text="@string/pack"/>

            <Spinner
                android:id="@+id/cmb_pack"
                style="@style/StyleSpinner"
                android:layout_width="0dip"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:entries="@array/none"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">

            <TextView
                style="@style/layout_wrap_content"
                android:text="@string/illust"/>

            <Spinner
                android:id="@+id/cmb_illust"
                style="@style/StyleSpinner"
                android:layout_width="0dip"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:entries="@array/none"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">

            <TextView
                style="@style/layout_wrap_content"
                android:text="@string/type"/>

            <Spinner
                android:id="@+id/cmb_type"
                style="@style/StyleSpinner"
                android:layout_width="0dip"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:entries="@array/type"/>

            <TextView
                style="@style/layout_wrap_content"
                android:text="@string/camp"/>

            <Spinner
                android:id="@+id/cmb_camp"
                style="@style/StyleSpinner"
                android:layout_width="0dip"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:entries="@array/camp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">

            <TextView
                style="@style/layout_wrap_content"
                android:text="@string/race"/>

            <Spinner
                android:id="@+id/cmb_race"
                style="@style/StyleSpinner"
                android:layout_width="0dip"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:entries="@array/none"/>

            <TextView
                style="@style/layout_wrap_content"
                android:text="@string/sign"/>

            <Spinner
                android:id="@+id/cmb_sign"
                style="@style/StyleSpinner"
                android:layout_width="0dip"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:entries="@array/sign"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">

            <TextView
                style="@style/layout_wrap_content"
                android:text="@string/rare"/>

            <Spinner
                android:id="@+id/cmb_rare"
                style="@style/StyleSpinner"
                android:layout_width="0dip"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:entries="@array/rare"/>

            <TextView
                style="@style/layout_wrap_content"
                android:text="@string/restrict"/>

            <Spinner
                android:id="@+id/cmb_restrict"
                style="@style/StyleSpinner"
                android:layout_width="0dip"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:entries="@array/restrict"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btn_ability_type"
                android:layout_width="0dip"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_blue"
                android:text="@string/ability_type"
                android:textColor="@color/white"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/btn_ability_detail"
                android:layout_width="0dip"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_blue"
                android:text="@string/ability_detail"
                android:textColor="@color/white"
                android:textSize="16sp"/>

        </LinearLayout>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="15dp"
        android:src="@android:drawable/ic_menu_search"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:src="@android:drawable/ic_menu_rotate"
        app:backgroundTint="@color/colorAccent"/>

</RelativeLayout>