<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/view_statusbar"
        style="@style/layout_statusbar"/>

    <RelativeLayout
        android:id="@+id/view_headerbar"
        style="@style/layout_headerbar">

        <LinearLayout
            android:id="@+id/view_header_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_back"
                style="@style/view_header_back"/>

            <TextView
                android:id="@+id/tv_title"
                style="@style/view_header_title"
                android:text="@string/app_name"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_header_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_menu"
                style="@style/view_header_menu"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/view_shadowbar"
        style="@style/layout_shadowbar"/>

</LinearLayout>